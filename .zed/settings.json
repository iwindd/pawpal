{
  "tab_size": 2,
  "format_on_save": "on",
  "languages": {
    "TypeScript": {
      "formatter": [
        // Use ESLint's --fix:
        { "code_action": "source.fixAll.eslint" },
        // Organize imports on save:
        { "code_action": "source.organizeImports" }
      ]
    },
    "TSX": {
      "formatter": [
        // Use ESLint's --fix:
        { "code_action": "source.fixAll.eslint" },
        // Organize imports on save:
        { "code_action": "source.organizeImports" }
      ]
    }
  },
  "lsp": {
    "vtsls": {
      "settings": {
        "typescript": {
          "tsserver": {
            "maxTsServerMemory": 8092
          }
        },
        "javascript": {
          "tsserver": {
            "maxTsServerMemory": 8092
          }
        }
      }
    }
  }
}
