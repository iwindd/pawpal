{
  "name": "pawpal",
  "private": true,
  "scripts": {
    "start": "turbo run start",
    "build": "turbo run build",
    "build:packages": "turbo run build -F @pawpal/shared -F @pawpal/nextjs-middleware ",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:reset": "turbo run db:reset",
    "db:deploy": "turbo run db:deploy",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "chmod:catalog": "pnpx codemod pnpm/catalog",
    "clean": "pnpm -r exec rm -rf node_modules .next dist build generated",
    "clean:root": "rm -rf node_modules pnpm-lock.yaml"
  },
  "devDependencies": {
    "prettier": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@9.5.0",
  "engines": {
    "node": ">=18"
  }
}
