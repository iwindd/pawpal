{
  "extends": "@pawpal/typescript-config/nestjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "isolatedModules": true,
    "paths": {
      "@/*": ["src/*"],
      "@/modules/*": ["src/modules/*"],
      "@/configs/*": ["src/configs/*"],
      "@/utils/*": ["src/utils/*"],
      "@/common/*": ["src/common/*"]
    }
  }
}
