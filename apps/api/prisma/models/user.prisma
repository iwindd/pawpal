model User {
  id          String   @id @default(cuid())
  email       String   @unique
  displayName String   @map("display_name")
  password    String
  avatar      String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  userWallets                     UserWallet[]            @relation("UserWallets")
  orders                          Order[]                 @relation("OrderUser")
  roles                           Role[]                  @relation("UserRoles")
  Resources                       Resource[]              @relation("ResourceUser")
  carousels                       Carousel[]              @relation("CarouselCreatedBy")
  fields                          ProductField[]          @relation("FieldCreatedBy")
  cancelledOrders                 Order[]                 @relation("OrderCancelledBy")
  completedOrders                 Order[]                 @relation("OrderCompletedBy")
  succeededUserWalletTransactions UserWalletTransaction[] @relation("UserWalletTransactionSucceededBy")
  failedUserWalletTransactions    UserWalletTransaction[] @relation("UserWalletTransactionFailedBy")
  suspensions                     UserSuspension[]        @relation("UserSuspensions")
  performedSuspensions            UserSuspension[]        @relation("PerformedSuspensions")
  auditLogs                       AuditLog[]              @relation("AuditLogs")
  userSecurityLogs                UserSecurityLog[]       @relation("UserSecurityLogs")
  performedUserSecurityLogs       UserSecurityLog[]       @relation("PerformedUserSecurityLogs")

  @@map("users")
}

enum UserSuspensionType {
  SUSPENDED
  UNSUSPENDED
}

model UserSuspension {
  id            String             @id @default(cuid())
  userId        String             @map("user_id")
  user          User               @relation("UserSuspensions", fields: [userId], references: [id])
  type          UserSuspensionType
  note          String?
  performedBy   User               @relation("PerformedSuspensions", fields: [performedById], references: [id])
  performedById String             @map("performed_by_id")
  createdAt     DateTime           @default(now()) @map("created_at")

  @@map("user_suspensions")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("sessions")
}
