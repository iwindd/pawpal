{
  "extends": "@pawpal/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/providers/*": ["./providers/*"],
      "@/configs/*": ["./configs/*"],
      "@/styles/*": ["./styles/*"],
      "@/layouts/*": ["./layouts/*"],
      "@/types/*": ["./types/*"],
      "@/assets/*": ["./assets/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
